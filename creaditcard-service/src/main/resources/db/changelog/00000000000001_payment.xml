<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">
    <changeSet id="00000000000001-payment-seq" author="solon">
        <createSequence sequenceName="payment_seq" startValue="1" incrementBy="1"/>
    </changeSet>

    <changeSet id="00000000000001-payment" author="solonk">
        <createTable tableName="users">
            <column name="id" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="public_id" type="${uuidType}">
                <constraints  nullable="false" unique="true" />
            </column>
            <column name="amount" type="bigint"/>
            <column name="status"
                    type="varchar(20)">
                <constraints nullable="false" />
            </column>
            <column name="created_date" type="date">
                <constraints nullable="false"/>
            </column>
            <column name="last_modified_date" type="date">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>