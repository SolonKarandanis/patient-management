<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet author="solon" id="00000000000011-add-fields">
        <addColumn tableName="languages">
            <column name="sort_key" type="smallint" />
            <column name="is_enabled" type="boolean" />
        </addColumn>
    </changeSet>

    <changeSet author="solon" id="00000000000011-update">
        <update tableName="languages">
            <column name="sort_key" value="1"/>
            <column name="is_enabled" value="true"/>
            <where>iso_code='en'</where>
        </update>
        <update tableName="languages">
            <column name="sort_key" value="2"/>
            <column name="is_enabled" value="false"/>
            <where>iso_code='gr'</where>
        </update>
    </changeSet>
</databaseChangeLog>